<div class="row">
    <div class="col-md-6">
        <h2><%= cliente ? 'Editar Cliente' : 'Nuevo Cliente' %></h2>
        <form action="/clientes" method="POST">
            <% if (cliente) { %>
                <input type="hidden" name="id" value="<%= cliente.id %>">
            <% } %>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" name="nombre" value="<%= cliente ? cliente.nombre : '' %>" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="email" value="<%= cliente ? cliente.email : '' %>" required>
            </div>
            <div class="form-group">
                <label for="telefono">Teléfono</label>
                <input type="text" class="form-control" name="telefono" value="<%= cliente ? cliente.telefono : '' %>">
            </div>
            <div class="form-group">
                <label for="categoria_id">Categoría</label>
                <select class="form-control" name="categoria_id" required>
                    <% categorias.forEach(categoria => { %>
                        <option value="<%= categoria.id %>" <%= cliente && cliente.categoria_id === categoria.id ? 'selected' : '' %>><%= categoria.nombre %></option>
                    <% }) %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>
